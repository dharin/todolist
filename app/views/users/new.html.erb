<div class="col-md-6 col-md-offset-3">
  <%= form_with model: @user, class: 'signup-form', local: true do |form| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Login</h4>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <%= form.label :email, class: 'control-label' %><br>
          <%= form.email_field :email, class: 'border-radius-8 form-control', required: true %><br>
        </div>      
        <div class="form-group">
          <%= form.submit class: 'btn btn-primary border-radius-8' %>
        </div>
      </div>
    </div>
  <% end -%>
</div>