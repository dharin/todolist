<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$('#new_list')[0].reset();"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add List</h4>
      </div>
      <%= form_for @list, url: user_lists_path(params[:user_id]), remote: true do |form| %>
        <div class="modal-body">
          <div class="form-group">
            <%= form.label :name, class: 'control-label' %><br>
            <%= form.text_field :name, class: 'border-radius-8 form-control', placeholder: "List name" %>
          </div>
          <div class="form-group">
            <%= form.label :description, class: 'control-label' %><br>
            <%= form.text_area :description, class: 'border-radius-8 form-control',
              placeholder: "List Description"%>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group">
            <button type="button" class="btn btn-default" id="close" data-dismiss="modal" onclick="$('#new_list')[0].reset();">Close</button>
            <%= form.submit class: 'btn btn-primary save' %>
          </div>
        </div>
      <% end -%>
    </div>
  </div>
</div>
